{
    "extends": "tsconfig/react-library.json",
    "include": ["./index.ts", "./request/env.ts", "../../declaration.d.ts"],
    "compilerOptions": {
        "types": ["node"],
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "jsx": "react"
    },
    "exclude": ["dist", "build", "node_modules", "mocks", "**/*.spec.ts"]
}
